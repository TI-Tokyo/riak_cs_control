#!/bin/sh
set -e

case "$1" in
    purge)
        rm -rf /etc/systemd/system/riak-cs-control.service.d
        rm -rf /var/log/riak-cs-control
        rm -rf /var/lib/riak-cs-control
        rm -rf /var/run/riak-cs-control

        # Remove User & Group, killing any process owned by them
        if getent passwd riak_cs_control >/dev/null; then
                pkill -u riak_cs_control || true
                deluser --quiet --system riak_cs_control
        fi
        if getent group riak_cs_control >/dev/null; then
                delgroup --quiet --system --only-if-empty riak_cs_control || true
        fi
    ;;

    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
    ;;

    *)
        echo "postrm called with unknown argument \`$1\`" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
