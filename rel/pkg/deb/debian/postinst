#!/bin/sh
# postinst script for riak-cs-control
#
# see: dh_installdeb(1)

set -e

# create group
if ! getent group riak_cs_control >/dev/null; then
        addgroup --system riak_cs_control
fi

# create user
if ! getent passwd riak_cs_control >/dev/null; then
        adduser --ingroup riak_cs_control \
                --home /var/lib/riak-cs-control \
                --disabled-password \
                --system --shell /bin/bash --no-create-home \
                --gecos "Riak CS Control" riak_cs_control
fi

# relx-generated launcher script wants to write to its ../releases,
# which is under /usr and shouldn't ever be written into, so:
mv /usr/lib/riak-cs-control/releases /var/lib/riak-cs-control/
(cd /usr/lib/riak-cs-control && ln -s /var/lib/riak-cs-control/releases)

chown -R riak_cs_control:riak_cs_control /var/log/riak-cs-control /var/lib/riak-cs-control
chmod 750 /var/log/riak-cs-control /var/lib/riak-cs-control


case "$1" in
    configure)
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
