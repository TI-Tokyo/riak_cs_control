[Unit]
Description=Riak CS Web Interface

[Service]
User=riak_cs_control
ExecStart=/usr/lib/riak-cs-control/bin/riak-cs-control start
ExecStop=/usr/lib/riak-cs-control/bin/riak-cs-control stop
Type=simple
PIDFile=/run/riak-cs-control/pid
EnvironmentFile=-/etc/default/riak-cs-control
RuntimeDirectory=riak-cs-control

[Install]
WantedBy=multi-user.target
