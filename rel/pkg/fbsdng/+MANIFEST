name: "riak_cs_control"
origin: "databases"
comment: "Riak CS Web Interface"
licenses: ["Apache 2"]
licenselogic: "single"
arch: "freebsd:13:x86:64"
www: "tiot.jp"
maintainer: "packaging@tiot.jp"
prefix: "/usr/local"
categories: ["databases"]
desc: "Riak CS Control is Web interface for Riak CS"
scripts: {
  pre-install: "if ! pw groupshow riak_cs_control 2>/dev/null; then pw groupadd riak_cs_control; fi \n if ! pw usershow riak_cs_control 2>/dev/null; then pw useradd riak_cs_control -g riak_cs_control -h - -d /usr/local/var/lib/riak-cs-control -s /bin/sh -c \"Riak CS Control user\"; fi"
  post-install: "(cd /usr/local/lib/riak-cs-control; (cd /usr/local/lib/riak-cs-control && ln -s ../../var/lib/riak-cs-control/releases && ln -sf /var/log/riak-cs-control log); ln -s erts-* erts); chown -R riak_cs_control:riak_cs_control /usr/local/var/lib/riak-cs-control/releases/* /run/riak-cs-control /var/log/riak-cs-control"
  post-deinstall: "rm -f /usr/local/lib/riak-cs-control/erts /usr/local/lib/riak-cs-control/releases /usr/local/lib/riak-cs-control/log"
}
