Name: riak-cs-control
Version: %{_version}
Release: %{_version}%{?dist}
License: "Apache 2.0"
Group: Development/Libraries
Source: %{_tarname}
URL: "https://tiot.jp"
Vendor: "Riak CS Control"
Packager: "Riak CS Control Maintainer" <"riak_cs_control_packaging@tiot.jp">
BuildRoot: %{_tmppath}/%{name}-%{_revision}-%{release}-root
Summary: "A Web interface to Riak CS cluster"
BuildRequires: nodejs yarnpkg
Requires(post): python3

%description
"Riak CS Control provides a Web interface to list and create users in a Riak CS cluster"

%define debug_package %{nil}

%define platform_bin_dir %{platform_base_dir}/bin

%prep
%setup -q -n %{_tarname_base} -c %{_tarname_base}

%define _build_id_links none

%build
make rel
sed -i 's|.set_me_from_distro_packaging|/var/lib/rcsc_www|' rel/out/bin/riak-cs-control

%install
%define relpath %{_builddir}/%{buildsubdir}/rel/riak-cs-control
%define buildroot_bin %{buildroot}%{_bindir}
%define buildroot_var %{buildroot}%{_sharedstatedir}
%define buildroot_man %{buildroot}%{_mandir}


mkdir -p \
  %{buildroot_bin} \
  %{buildroot_man} \
  %{buildroot_var}

cp -R rel/out/www %{buildroot_var}/rcsc_www
cp -R rel/out/bin/riak-cs-control %{buildroot_bin}
cp -a %{_builddir}/%{buildsubdir}/doc/man/man1 %{buildroot_man}

# Needed to work around check-rpaths which seems to be hardcoded into recent
# RPM releases
export QA_RPATHS=3

%files
%defattr(-,root,root)
%{_bindir}/riak-cs-control
%{_mandir}/*
%{_localstatedir}/lib/rcsc_www

%clean
rm -rf %{buildroot}
